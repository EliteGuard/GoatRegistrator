<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.armpk.goatregistrator.activities.FarmSearchActivity">

    <LinearLayout
        android:id="@+id/linear_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left|center_vertical"
        android:padding="5sp">
        <TextView
            android:id="@+id/text_last_sync"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_last_sync_from_sc"
            android:textSize="16sp"/>
        <Button
            android:id="@+id/btn_sync_all_farms"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/text_sync_all_farm"/>
    </LinearLayout>




    <ListView
        android:id="@+id/list_results"
        android:layout_below="@id/linear_options"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>
</RelativeLayout>